{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "esModuleInterop": false,
    "jsx": "react",
    "jsxFactory": "h",
    "declaration": true,
    "importHelpers": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "noImplicitAny": false,
    "noEmitOnError": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "lib": ["es2015", "DOM", "ScriptHost"],
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
